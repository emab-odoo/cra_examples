<?xml version="1.0" encoding='utf-8'?>
<!-- Good practice -->
<odoo>
    <template id="sale_order_portal_content_cra" name="sale_order_portal_content_cra" inherit_id="sale.sale_order_portal_content">
        <xpath expr="//thead" position="before">
            <t t-call="cra_example_sale_add_step_3.sale_order_portal_content_modal_cra"></t>
        </xpath>
        <xpath expr="//thead//th[3]" position="after">
            <th name="th_proof" class="text-right">Proof</th>
        </xpath>
        <xpath expr="//tbody/t[@t-foreach='sale_order.order_line']/tr//td[3]" position="after">
            <td name="td_proof" class="text-right">
                <t t-if="line.needs_proof">
                    <t t-if="line.proof_image">
                        <a data-target="#exampleModal" data-toggle="modal" t-att-id='line.id' t-att-title='line.display_name' onclick="{
                    document.getElementById('proof_image').src = '/web/image/sale.order.line/'+ this.id + '/proof_image';
                    document.getElementById('modal_title').innerHTML = this.title;
                    }">See Proof</a>
                    </t>
                    <t t-else="">
                        <p>No Proof Available</p>
                    </t>

                </t>
                <t t-else="">
                    <a>No Proof Needed</a>
                </t>

            </td>
        </xpath>
    </template>

    <template id="sale_order_portal_template_cra" name="sale_order_portal_template_cra" inherit_id="sale.sale_order_portal_template">
        <xpath expr="//div[hasclass('o_portal_sale_sidebar')]/t/t[@t-set='entries']/ul/li" position="replace">
            <li class="list-group-item flex-grow-1">
                <t t-if="sale_order.proof_has_to_be_validated(True)">
                    <t t-if="sale_order.proof_ready_for_approval()">
                        <a role="button" class="btn btn-primary btn-block mb8" data-toggle="modal" data-target="#modalaccepts" href="#">
                            <i class="fa fa-check" />
                            <t t-if="sale_order.proof_has_to_be_validated(True)">Sign Proof</t>
                        </a>
                    </t>
                    <t t-else="">
                        <a role="button" class="btn btn-primary btn-block mb8 disabled" data-toggle="modal" data-target="#modalaccepts" href="#">
                            <i class="fa fa-check" />
                            <t t-if="sale_order.proof_has_to_be_validated(True)">Sign Proof</t>
                        </a>
                    </t>
                </t>
                <t t-else="">
                    <a t-if="sale_order.has_to_be_signed(True)" role="button" class="btn btn-primary btn-block mb8" data-toggle="modal" data-target="#modalaccept" href="#">
                        <i class="fa fa-check" />
                        <t t-if="sale_order.has_to_be_paid(True)"> Sign &amp; Pay</t>
                        <t t-else=""> Accept &amp; Sign</t>
                    </a>
                    <a t-elif="sale_order.has_to_be_paid(True)" role="button" id="o_sale_portal_paynow" data-toggle="modal" data-target="#modalaccept" href="#" t-att-class="'btn-block mb8 %s' % ('btn btn-light' if sale_order.transaction_ids else 'btn btn-primary')">
                        <i class="fa fa-check" />
                        <t t-if="not sale_order.signature">Accept &amp; Pay</t>
                        <t t-else="">Pay Now</t>
                    </a>

                </t>
                <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                    <div class="btn-group flex-grow-1 mr-1 mb-1">
                        <a class="btn btn-secondary btn-block o_download_btn" t-att-href="sale_order.get_portal_url(report_type='pdf', download=True)" title="Download">
                            <i class="fa fa-download" />
                            Download
                        </a>
                    </div>
                    <div class="btn-group flex-grow-1 mb-1">
                        <a class="btn btn-secondary btn-block o_print_btn o_portal_invoice_print" t-att-href="sale_order.get_portal_url(report_type='pdf')" id="print_invoice_report" title="Print" target="_blank">
                            <i class="fa fa-print" />
                            Print
                        </a>
                    </div>
                </div>

            </li>
        </xpath>
        <xpath expr="//div[@id='quote_content']" position="inside">
            <div role="dialog" class="modal fade" id="modalaccepts">
                <div class="modal-dialog" t-if="sale_order.proof_has_to_be_validated(True)">
                    <form id="accept" method="POST" t-att-data-order-id="sale_order.id" t-att-data-token="sale_order.access_token" t-att-data-name="'test'" class="modal-content js_website_submit_form" t-att-action="sale_order.get_portal_url(suffix='/validate_proof')">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                        <header class="modal-header">
                            <h4 class="modal-title">Validate Proof</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">Ã—</button>
                        </header>
                        <main class="modal-body" id="sign-dialog">
                            <p>
                                <span>By signing this proposal, I agree to the following terms:</span>
                                <ul>
                                    <li>
                                        <span>Accepted on the behalf of:</span>
                                        <b t-field="sale_order.partner_id.commercial_partner_id" />
                                    </li>
                                </ul>
                            </p>
                            <label for="approve">Approve</label>
                            <input type="checkbox" id="approve" name="approve" value="True" onclick="{
                                textarea = document.getElementById('reasons');
                                textareaLabel = document.getElementById('reasons_label');
                                if(!this.checked){
                                    textarea.style.display = 'block';
                                    textareaLabel.style.display = 'block';
                                }else{
                                    textarea.style.display = 'none';
                                    textareaLabel.style.display = 'none';
                                }
                                
                            }" checked=""></input>
                            <br></br>
                            <label for="reasons" id="reasons_label" style="display: none; min-width: 100%">Reasons for declining:</label>
                            <textarea type="checkbox" id="reasons" name="reasons" style="display: none"></textarea>
                        </main>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>

            </div>
        </xpath>
    </template>

    <template id="sale_order_portal_content_modal_cra" name="sale_order_portal_content_modal_cra">
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modal_title">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true"></span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <img src="" id="proof_image" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </template>
</odoo>